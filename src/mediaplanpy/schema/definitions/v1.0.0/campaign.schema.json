{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/laurent-colard-l5i/media-plan-ods/main/schemas/v1.0.0/campaign.schema.json",
  "title": "Campaign",
  "type": "object",
  "required": ["id", "name", "objective", "start_date", "end_date", "budget_total"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "objective": { "type": "string" },
    "start_date": { "type": "string", "format": "date" },
    "end_date": { "type": "string", "format": "date" },
    "budget_total": { "type": "number" },
    "product_name": { "type": "string" },
    "product_description": { "type": "string" },
    "audience_name": { "type": "string" },
    "audience_age_start": { "type": "integer" },
    "audience_age_end": { "type": "integer" },
    "audience_gender": {
      "type": "string",
      "enum": ["Male", "Female", "Any"]
    },
    "audience_interests": {
      "type": "array",
      "items": { "type": "string" }
    },
    "location_type": {
      "type": "string",
      "enum": ["Country", "State"]
    },
    "locations": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}